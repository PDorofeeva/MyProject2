<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theorywallpaper"
    android:foregroundTint="#00FFFFFF"
    tools:context=".ElementarySchoolEnglish">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#211400">


        <TextView
            android:id="@+id/textView57"
            android:layout_width="356dp"
            android:layout_height="117dp"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/secondfont"
            android:text="Имена существительные"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="38sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:src="@drawable/component_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView57" />

        <ImageButton
            android:id="@+id/imageButton13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/rectangle_yellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView66" />

        <TextView
            android:id="@+id/textView64"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/secondfont"
            android:text="Назад"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageButton13"
            app:layout_constraintStart_toStartOf="@+id/imageButton13"
            app:layout_constraintTop_toTopOf="@+id/imageButton13" />

        <ImageView
            android:id="@+id/imageView29"
            android:layout_width="368dp"
            android:layout_height="154dp"
            android:layout_marginTop="72dp"
            android:src="@drawable/component_11"
            app:layout_constraintStart_toStartOf="@+id/imageView26"
            app:layout_constraintTop_toBottomOf="@+id/textView65" />

        <TextView
            android:id="@+id/textView63"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/secondfont"
            android:text="Запомнить!"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView29"
            app:layout_constraintStart_toStartOf="@+id/imageView29" />

        <TextView
            android:id="@+id/textView65"
            android:layout_width="326dp"
            android:layout_height="151dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/secondfont"
            android:text="Имена собственные: имя, фамилия, отчество, кличка питомца,названия стран, городов, водоёмов и др."
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/imageView26"
            app:layout_constraintTop_toBottomOf="@+id/imageView26" />

        <TextView
            android:id="@+id/textView66"
            android:layout_width="333dp"
            android:layout_height="131dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/secondfont"
            android:text="Именами нарицательными являются все остальные слова."
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/imageView29"
            app:layout_constraintTop_toBottomOf="@+id/imageView29" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>