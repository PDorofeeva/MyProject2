<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/practice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Practice">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/rectangle_7__1_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="252dp"
            android:layout_height="78dp"
            android:layout_marginTop="228dp"
            android:fontFamily="@font/secondfont"
            android:text="4+23 = __"
            android:textColor="#FFFFFF"
            android:textSize="54sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="336dp"
            android:layout_height="296dp"
            android:layout_marginTop="120dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4">

            <Button
                android:id="@+id/button"
                android:layout_width="333dp"
                android:layout_height="74dp"
                android:backgroundTint="@color/pink"
                android:fontFamily="@font/secondfont"
                android:text="1"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="333dp"
                android:layout_height="74dp"
                android:backgroundTint="@color/pink"
                android:fontFamily="@font/secondfont"
                android:text="2 "
                android:textSize="28sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="333dp"
                android:layout_height="74dp"
                android:backgroundTint="@color/pink"
                android:fontFamily="@font/secondfont"
                android:text="3"
                android:textSize="28sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="333dp"
                android:layout_height="74dp"
                android:backgroundTint="@color/pink"
                android:fontFamily="@font/secondfont"
                android:text="4"
                android:textSize="28sp"
                app:cornerRadius="10dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView23"
            android:layout_width="101dp"
            android:layout_height="39dp"
            android:fontFamily="@font/secondfont"
            android:text="Назад"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
            app:layout_constraintEnd_toEndOf="@+id/imageButton2"
            app:layout_constraintStart_toStartOf="@+id/imageButton2"
            app:layout_constraintTop_toTopOf="@+id/imageButton2" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="368dp"
            android:layout_height="179dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/secondfont"
            android:text="Выберите правильный ответ:"
            android:textColor="#FFFFFF"
            android:textSize="44sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="_______________________________________"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>